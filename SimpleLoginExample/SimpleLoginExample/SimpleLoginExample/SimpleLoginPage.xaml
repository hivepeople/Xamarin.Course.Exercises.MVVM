<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SimpleLoginExample.SimpleLoginPage">
  <StackLayout>
    <Label x:Name="versionLabel" Text="{Binding VersionText}"/>
    <Label x:Name="statusLabel" Text="{Binding StatusText}"/>
    <Entry x:Name="codeEntry" Text="{Binding Code, Mode=OneWayToSource}"/>
    <Button x:Name="loginButton" Text="Login" IsEnabled="{Binding EntryCodeIsOk}"/>
  </StackLayout>
</ContentPage>